<Page x:Class="BDWPF.AddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AddEditPage">

    <Grid>
        <TextBlock Text="Редактирование сотрудника" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30" Margin="0,-10,0,0"/>

        <StackPanel Margin="20" VerticalAlignment="Center">
            <TextBox Name="NameTextBox" Margin="0,10,0,10" Width="200" Text="Введите имя" />
            <TextBox Name="RoleTextBox" Margin="0,10,0,10" Width="200" Text="Введите должность" />
            <TextBox Name="ContactInfoTextBox" Margin="0,10,0,10" Width="200" Text="Введите контактную информацию" />

            <Button Content="Сохранить" HorizontalAlignment="Center" Margin="0,10,0,0" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
