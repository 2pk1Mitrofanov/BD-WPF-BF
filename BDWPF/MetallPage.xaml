<Page x:Class="BDWPF.MetallPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="MetallPage">
    <Grid>
        <StackPanel>
            <TextBlock Text="Перевозка металла" FontSize="24" Margin="10"/>
            <TextBox Text="Введите название груза..." />
            <Button Content="Добавить данные" Click="Button_Click"/>
            <Button Content="Перейти на страницу редактирования" Click="Button_Click"/>
            <Button Content="Редактировать запись" Click="Button_Click" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
