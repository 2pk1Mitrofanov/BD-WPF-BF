<Window x:Class="BDWPF.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EmployeeWindow" Height="300" Width="400">
    <Grid>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="tbName" HorizontalAlignment="Left" Margin="100,10,0,0" VerticalAlignment="Top" Width="280"/>

        <Label Content="Role:" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top"/>
        <TextBox Name="tbRole" HorizontalAlignment="Left" Margin="100,50,0,0" VerticalAlignment="Top" Width="280"/>

        <Label Content="Contact Info:" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top"/>
        <TextBox Name="tbContactInfo" HorizontalAlignment="Left" Margin="120,95,0,0" VerticalAlignment="Top" Width="260"/>

        <Button Content="Save" HorizontalAlignment="Left" Margin="100,130,0,0" VerticalAlignment="Top" Click="Button_Save"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="200,130,0,0" VerticalAlignment="Top" Click="Button_Cancel"/>
    </Grid>
</Window>
